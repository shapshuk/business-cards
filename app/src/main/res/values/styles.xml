<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="style_roboto_sp_48">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_48</item>
    </style>

    <style name="style_roboto_bold_sp_20">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_anton_sp_48">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:textSize">@dimen/sp_48</item>
    </style>

    <style name="style_roboto_medium_sp_24">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="style_roboto_medium_sp_20">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="style_roboto_sp_20">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="style_roboto_sp_16">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_anton_sp_20">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="appbar_textview">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="profileDetailsTv" parent="Widget.AppCompat.TextView">
        <item name="background">@drawable/bg_search</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="profileButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:src">@drawable/bg_search</item>
        <item name="android:elevation">@dimen/dp_3</item>
    </style>

    <style name="SuccessFinishDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SuccessFinishDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/bounce_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="StyleRobotoWhite">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <dimen name="sp_14">14sp</dimen>
</resources>