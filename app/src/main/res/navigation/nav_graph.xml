<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.businesscards.ui.splashscreen.SplashScreenFragment"
        android:label="SplashScreenFragment" >
        <action
            android:id="@+id/action_splashScreenFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_cardsMainFragment"
            app:destination="@id/cardsMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.businesscards.ui.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_cardsMainFragment"
            app:destination="@id/cardsMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardsMainFragment"
        android:name="com.example.businesscards.ui.cardsmainfragment.CardsMainFragment"
        android:label="CardsMainFragment" >
        <action
            android:id="@+id/action_cardsMainFragment_to_shareCardFragment"
            app:destination="@id/shareCardFragment" />
        <action
            android:id="@+id/action_cardsMainFragment_to_createCardFragment"
            app:destination="@id/createCardFragment" />
        <action
            android:id="@+id/action_cardsMainFragment_to_editCardFragment"
            app:destination="@id/editCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/shareCardFragment"
        android:name="com.example.businesscards.ui.sharecard.ShareCardFragment"
        android:label="ShareCardFragment" >
        <argument
            android:name="cardToShare"
            app:argType="com.example.businesscards.data.CardUiModel"/>
        <action
            android:id="@+id/action_shareCardFragment_to_acceptedCardFragment"
            app:destination="@id/acceptedCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/createCardFragment"
        android:name="com.example.businesscards.ui.createcard.CreateCardFragment"
        android:label="CreateCardFragment" >
        <action
            android:id="@+id/action_createCardFragment_to_cardsMainFragment"
            app:destination="@id/cardsMainFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/acceptedCardFragment"
        android:name="com.example.businesscards.ui.acceptedcard.AcceptedCardFragment"
        android:label="AcceptedCardFragment" >
        <argument
            android:name="cardToShare"
            app:argType="com.example.businesscards.data.CardUiModel"/>
        <action
            android:id="@+id/action_acceptedCardFragment_to_cardsMainFragment"
            app:destination="@id/cardsMainFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editCardFragment"
        android:name="com.example.businesscards.ui.editcard.EditCardFragment"
        android:label="EditCardFragment" >
        <argument
            android:name="cardToShare"
            app:argType="com.example.businesscards.data.CardUiModel"/>
        <action
            android:id="@+id/action_editCardFragment_to_cardsMainFragment"
            app:destination="@id/cardsMainFragment" />
    </fragment>
</navigation>