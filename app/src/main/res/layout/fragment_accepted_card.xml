<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business cards"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepted card:"
        android:textAppearance="@style/style_roboto_medium_sp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_12"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rv_item_bg"
        android:padding="@dimen/dp_16"
        android:layout_margin="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_roboto_sp_20"
                android:layout_marginBottom="@dimen/dp_4"
                android:text="Andrew Shapshuk"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_roboto_sp_14"
                android:textStyle=""
                android:layout_marginBottom="@dimen/dp_4"
                android:text="andrewshapshuk@gmail.com"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+375333808019"
                android:layout_marginBottom="@dimen/dp_4"
                style="@style/style_roboto_sp_14"/>

            <TextView
                android:id="@+id/job_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Developer at Innowise-Group"
                android:layout_marginBottom="@dimen/dp_4"
                style="@style/style_roboto_sp_14"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/personal_photo"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/return_to_main_screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_rounded_orange_button"
        android:text="Back to main screen"
        android:textAppearance="@style/style_roboto_medium_sp_20"
        android:layout_margin="@dimen/dp_16"/>

</LinearLayout>