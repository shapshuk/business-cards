<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rv_item_bg"
    android:padding="@dimen/dp_16"
    android:layout_margin="@dimen/dp_12"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_roboto_sp_20"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="Andrew Shapshuk"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_roboto_sp_14"
            android:textStyle=""
            android:layout_marginBottom="@dimen/dp_4"
            android:text="andrewshapshuk@gmail.com"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+375333808019"
            android:layout_marginBottom="@dimen/dp_4"
            style="@style/style_roboto_sp_14"/>

        <TextView
            android:id="@+id/job_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer at Innowise-Group"
            android:layout_marginBottom="@dimen/dp_4"
            style="@style/style_roboto_sp_14"/>

        <ImageView
            android:id="@+id/nfc_button"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_nfc_black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/personal_photo"/>

        <ImageView
            android:id="@+id/edit_button"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:src="@drawable/ic_pen_24" />

        <ImageView
            android:id="@+id/bookmark_button"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:src="@drawable/ic_bookmark_24" />

        <ImageView
            android:id="@+id/delete_button"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:src="@drawable/ic_trash_can_24" />

    </LinearLayout>
</LinearLayout>
